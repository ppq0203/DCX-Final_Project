<mapper namespace="project.momento.room.mapper.RoomMapper">	<!-- xml파일을 사용할 mapper가 있는 경로 -->
<!-- INSERT문 -->
	<insert id="insertRoom" parameterType="project.momento.room.dto.RoomDto">
		<![CDATA[
			INSERT INTO ROOM
			(
				PK_ROOM_SEQ,
				ROOM_NO,
				ROOM_NAME,
				ROOM_PWD,
				ROOM_TYPE,
				ROOM_PLAY,
				ROOM_PLAYTIME,
				ROOM_NUMBER,
				TEAM_NUMBER,
				ROOM_LEVEL
				ROOM_ID,
				ROOM_TIME,
				UPDATE_DT
			) 
			VALUES
			(
				#{pkRoomSeq},
				#{roomNo},
				#{roomName},
				#{roomPwd},
				#{roomType},
				#{roomPlay},
				#{roomPlaytime},
				#{roomNumber},
				#{teamNumber},
				#{roomLevel},
				#{roomId},
				#{roomTime},
				#{updateDt}
				
			)
		]]>
	</insert>
	
