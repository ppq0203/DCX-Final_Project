<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="project.momento.answer.mapper.AnswerRMapper">	<!-- xml파일을 사용할 mapper가 있는 경로 -->
<!-- Heidisql연결후 입력 저장-->
	<!-- SELECT문 -->             <!-- 정보내려주기 -->                               <!-- 정보 받아오기 -->
	<select id="selectAnswer" resultType="project.momento.answer.dto.AnswerDto" parameterType="project.momento.answer.dto.AnswerDto">
		<![CDATA[
			SELECT
				PK_ANSWER_SEQ AS PkAnswerSeq,
				ANSWER_USER AS AnswerUser,
				ANSWER_OX AS AnswerOx,
				REGIST_DT AS RegistDt,
			FROM 
				ANSWER
			WHERE
				PK_ANSWER_SEQ = #{pkAnswerSeq}
		]]>
	</select>
	
	<!-- INSERT문 -->
	<insert id="insertAnswer" parameterType="project.momento.answer.dto.AnswerDto">
		<![CDATA[
			INSERT INTO ANSWER
			(
				PK_ANSWER_SEQ,
				PK_QUSTION_SEQ,
				PK_USER_SEQ,
				ANSWER_USER,
				ANSWER_OX,
				REGIST_DT,
			) 
			VALUES
			(
				ifnull(#{pkAnswerSeq}, null),
				#{answerUser},
				#{answerOx},
				#{registDt},
			)
			ON DUPLICATE KEY UPDATE
			ANSWER_OX = IF( ANSWER_USER = ANSWER_QN, 'O', 'X' )
			
		]]>
	</insert>
	
	<!-- DELETE문 -->
	<delete id="deleteAnswer" parameterType="project.momento.answer.dto.AnswerDto">
		<![CDATA[
			DELETE FROM ANSWER
			
			WHERE
				PK_ANSWER_SEQ = #{pkAnswerSeq}
		]]>
	</delete>
	
	<!-- UPDATE문 --> 
	<update id="updateAnswer" parameterType="project.momento.answer.dto.AnswerDto">
		<![CDATA[
			UPDATE SET
				ANSWER
			WHERE
				PK_ROOM_SEQ = #{pkRoomSeq}
		]]>
	</update>
	
</mapper>